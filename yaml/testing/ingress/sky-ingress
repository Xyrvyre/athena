apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: ingress-test
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /$2
spec:
  rules:
  - host: athena.local
    http:
      paths:
      - path: /test-lab/sky/client(/|$)(.*)
        backend:
          serviceName: client-web-terminal
          servicePort: 8080
      - path: /test-lab/sky/server
        backend:
          serviceName: server-web-terminal(/|$)(.*)
          servicePort: 8080
