{
  "kind": "NetworkPolicy",
  "apiVersion": "networking.k8s.io/v1",
  "metadata": {
    "name": "internal-policy",
    "labels": {
      "lab": "example"
    }
  },
  "spec": {
    "podSelector": {
      "matchLabels": {
        "lab": "example",
        "net": "internal"
      }
    },
    "ingress": [
      {
        "from": [
          {
            "ipBlock": null,
            "cidr": null
          },
          {
            "podSelector": {
              "matchLabels": {
                "lab": "example",
                "net": "dmz"
              }
            }
          },
          {
            "podSelector": {
              "matchLabels": {
                "lab": "example",
                "net": "internal"
              }
            }
          }
        ]
      }
    ],
    "egress": [
      {
        "to": [
          {
            "ipBlock": null,
            "cidr": null
          },
          {
            "podSelector": {
              "matchLabels": {
                "lab": "example"
              }
            }
          }
        ]
      }
    ]
  }
}