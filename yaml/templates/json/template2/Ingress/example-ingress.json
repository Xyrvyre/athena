{
  "apiVersion": "networking.k8s.io/v1beta1",
  "kind": "Ingress",
  "metadata": {
    "name": "ingress-example",
    "annotations": {
      "nginx.ingress.kubernetes.io/auth-url": "https://$host/oauth2/auth",
      "nginx.ingress.kubernetes.io/auth-signin": "https://$host/oauth2/start?rd=$escaped_request_uri",
      "nginx.ingress.kubernetes.io/rewrite-target": "/$1"
    },
    "labels": {
      "lab": "example"
    }
  },
  "spec": {
    "rules": [
      {
        "host": "athena.err0r.stream",
        "http": {
          "paths": [
            {
              "path": "/example/ubuntu/vnc/(.*)",
              "backend": {
                "serviceName": "ubuntu-interface",
                "servicePort": 80
              }
            },
            {
              "path": "/example/ubuntu/vnc/websockify",
              "backend": {
                "serviceName": "ubuntu-interface",
                "servicePort": 5900
              }
            },
            {
              "path": "/example/ubuntu/tty/(.*)",
              "backend": {
                "serviceName": "ubuntu-interface",
                "servicePort": 8080
              }
            },
            {
              "path": "/example/kali/vnc/(.*)",
              "backend": {
                "serviceName": "kali-interface",
                "servicePort": 80
              }
            },
            {
              "path": "/example/kali/vnc/websockify",
              "backend": {
                "serviceName": "kali-interface",
                "servicePort": 5900
              }
            },
            {
              "path": "/example/kali/tty/(.*)",
              "backend": {
                "serviceName": "kali-interface",
                "servicePort": 8080
              }
            }
          ]
        }
      }
    ],
    "tls": [
      {
        "hosts": [
          "athena.err0r.stream"
        ],
        "secretName": "athena"
      }
    ]
  }
}