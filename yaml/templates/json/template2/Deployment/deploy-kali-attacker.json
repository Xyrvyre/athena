{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "kali-attacker",
    "labels": {
      "lab": "example",
      "system": "attacker",
      "net": "external"
    }
  },
  "spec": {
    "selector": {
      "matchLabels": {
        "lab": "example",
        "system": "attacker",
        "net": "external"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "lab": "example",
          "system": "attacker",
          "net": "external"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "kali-attacker",
            "image": "xyrvyre/athena:kali-example",
            "ports": [
              {
                "containerPort": 8080
              },
              {
                "containerPort": 5900
              }
            ]
          },
          {
            "name": "kali-vnc",
            "image": "xyrvyre/athena:vnc-client",
            "ports": [
              {
                "containerPort": 80
              }
            ]
          }
        ]
      }
    }
  }
}