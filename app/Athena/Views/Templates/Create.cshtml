@model Athena.Models.Template

@{
    ViewData["Title"] = "Create Template";
}
<style>

    #warn {
        width: 800px;
        height: 140px;
        border: solid;
        border-color: darkred;
        background-color: darksalmon;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto;
    }
</style>

<div id="warn">
    <h6 style="padding-left: 10px">
        Reminder:
        <br />
        1. The Path value is the relative path to the directory containing your Template files. <br />
        2. The Template root directory defined by the Path field should contain Deployment, Service, Ingress and NetworkPolicy directories.<br />
        3. The Lab value should be the same as the value used for the 'lab' label in the template YAML files. <br />
        4. All YAML files must contain the 'lab' label.
    </h6>
</div>
<br />
<h2>Create Lab Template</h2>
<hr />
<br />


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Path" class="control-label"></label>
                <input asp-for="Path" class="form-control" />
                <span asp-validation-for="Path" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TemplateName" class="control-label">Template Name</label>
                <input asp-for="TemplateName" class="form-control" />
                <span asp-validation-for="TemplateName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lab" class="control-label">Lab Label</label>
                <input asp-for="Lab" class="form-control" />
                <span asp-validation-for="Lab" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Template" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
