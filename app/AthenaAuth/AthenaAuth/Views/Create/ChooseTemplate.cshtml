@model IEnumerable<AthenaAuth.Models.Group_Template>

@{
    ViewData["Title"] = "ChooseTemplate";
}

<h1>Choose a lab</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Template.TemplateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Template.Lab)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Create" asp-action="Index" asp-route-id="@item.Template.TemplateId">
                        @Html.DisplayFor(modelItem => item.Template.TemplateName)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Template.Lab)
                </td>
            </tr>
        }
</table>

